<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GifButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="rippleColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">32dp</item>
    </style>

    <style name="GifSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_tint_color</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/text3</item>
    </style>

</resources>